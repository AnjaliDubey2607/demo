<h3 style="text-align:center;margin-top:50px">Products</h3>
<div class = "container mt-5">
	<div class = "row">
 		<% @products.each do |product| %>
			<div class = "col-lg-4 d-flex align-items-stretch p-0">
				<div class="card" style="width: 18rem;margin-bottom:20px">
 					<img class="card-img-top" src=<%= product.avatar_url%> alt="Card image cap" 
						style="width:250px;height:250px; margin:auto;margin-top:10px" >
  				<div class="card-body text-center">
    				<h5 class="card-title"><%= product.name %></h5>
       			<p><b>Price : </b><%= product.price %><br>
       			<b>Status : </b><%= product.status ? "Available" : "Out of Stoke"%><br>
       			<b>Supplier : </b><%= User.user_name(product.user_id) %></p>
  				</div>
				</div>
 			</div>
 		<%end%>
	</div>
</div>