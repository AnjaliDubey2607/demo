


<div class="container-fluid">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" 
  style="margin-left:10%; margin-right:10%">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "slide", alt: "Go Home", class: "d-block",style: "height:500px;width:95%" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "slide1", alt: "Go Home", class: "d-block",style: "height:500px;width:95%" %>
    </div>
     <div class="carousel-item">
      <%= image_tag "slide2", alt: "Go Home", class: "d-block",style: "margin:25px;height:500px;width:95%" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>

<%= render "/products",  product: @products %>
