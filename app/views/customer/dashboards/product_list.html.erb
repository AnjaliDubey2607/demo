<% if @products.present?%>
  <div class="container mt-5">
    <div class="row" style="margin-left:8% ;margin-right:10%">
      <% @products.each do |product| %>
        <div class = "col-lg-4 d-flex align-items-stretch" >
          <div class="card text-center" style=" margin-bottom:20px; border:none">
            <img class="card-img-top" src=<%= product.avatar_url%> alt="Card image cap" 
              style="height:200px;width:250px;margin:auto;margin-top:20px;" >
            <div class="card-body">  
              <h4 class="card-title"><%= product.name.capitalize %></h4>                   
              <p>Price :<%= product.price %></p>
              <p style="text-align:justify-center;width:250px"><b>Description :</b><br><%= product.description %></p>
              <p style="color:grey">shop Now</p>
              <button class="bg-primary" style ="border:none;color:white; width:150px;
								height:40px;border-radius:10px" >
								<%= link_to "Add_to_cart", customer_add_cart_path(product.id), 
								style: "text-decoration:none;color:white" %>
							</button> 
            </div>
          </div>
        </div> 
      <%end%>     
    </div>
	</div>
<% else %>
	<div class="container">
		<div class="row align-items-center text-center"
			style="min-height: 80vh">
			<div class="col-md-12">
				<h3>No Product found</h3>
			</div>
		</div>
	</div>
<% end %>